{
    "name": "YoutubeCinema",
    "version": "1.1.1",
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png",
            "48": "img/icon48.png",
            "96": "img/icon96.png",
            "128": "img/icon128.png"
        }
    },
    "permissions": [
        "*://*.youtube.com/*",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "icons": {
        "19": "img/icon19.png",
        "38": "img/icon38.png",
        "48": "img/icon48.png",
        "96": "img/icon96.png",
        "128": "img/icon128.png"
    },
    "applications": {
        "gecko": {"id": "youtubecinema@youtubecinema"}
    },
    "manifest_version": 2
}
